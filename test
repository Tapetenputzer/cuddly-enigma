local settings = {
    movementSpeed = 16,
    flyEnabled = false,
    autoCollectPlant = false,
    autoSellInventory = false,
    autoBuySeeds = false,
    selectedSeeds = {"Apple"},
    buyInterval = 5,
    buyMode = "Sequential"
}

