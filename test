    statusText.Text = "âœ… Ready to farm!\nğŸƒâ€â™‚ï¸ Speed: " .. settings.movementSpeed .. "\nâœˆï¸ Flight: " .. (settings.flyEnabled and "ON" or "OFF")"
end)

